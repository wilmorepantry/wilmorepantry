<!DOCTYPE html>
<html
  class="text-lg font-sans text-gray-800 bg-gray-100 leading-relaxed antialiased"
  {%
  if
  section
  %}
  data-current="{{ section }}"
  {%
  endif
  %}
  lang="en"
>
  {% include "components/head.njk" %}

  <body>
    <header class="bg-white shadow font-serif">
      <div class="flex flex-row justify-between items-center container mx-auto">
        <p class="md:text-2xl leading-none py-4">
          <a
            class="font-bold hover:text-blue-700 font-semibold"
            href="{{ '/' | url }}"
            >{{ metadata.title }}</a
          >
        </p>
        {% include "components/nav.njk" %}
      </div>
    </header>

    <main class="">
      {{ content | safe }}
    </main>

    {% include "components/footer.njk" %}
    <script src="/_includes/assets/js/script.js"></script>
    <script src="https://code.iconify.design/1/1.0.4/iconify.min.js"></script>
  </body>
</html>
